{
  "rust-analyzer.updates.channel": "nightly",
  "rust-analyzer.cargo.allFeatures": true,
  "rust-analyzer.cargo.runBuildScripts": true,

  "cSpellExt.enableDictionaries": [
    "catalan",
    "russian",
    "medical-terms"
  ],
  "cSpell.language": "en,ru",

  "clangd.arguments": [
    "--pch-storage=memory",
    "--clang-tidy",
    "--all-scopes-completion",
    "--cross-file-rename",
    "--pretty"
  ],

  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ]
    }
  },
  "cSpell.userWords": [
    "Hasher",
    "Jemalloc",
    "Relude",
    "clangd",
    "critertion",
    "datablock",
    "jemallocator",
    "libc",
    "repr",
    "structopt",
    "teloxide",
    "varchar",
    "парсинга",
    "сериализации"
  ]
}
